{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "project": {
      "title": "Google Cloud Project ID",
      "type": "string",
      "minLength": 1
    },
    "instance": {
      "title": "Spanner Instance ID",
      "type": "string",
      "minLength": 2,
      "maxLength": 64
    },
    "database": {
      "title": "Spanner Database ID",
      "type": "string",
      "minLength": 2,
      "maxLength": 30
    },
    "credentialsKeyFile": {
      "title": "Credentials Key File (optional)",
      "$comment": "Specifying a credentials file is optional. If no file is specified, the default Google credentials on this environment will be used",
      "type": "string"
    },
    "connectToEmulator": {
      "title": "Connect to emulator",
      "type": "boolean"
    },
    "emulatorHost": {
      "title": "Emulator host",
      "type": "string"
    },
    "emulatorPort": {
      "title": "Emulator port",
      "type": "string"
    }
  },
  "required": [
    "project",
    "instance",
    "database"
  ]
}